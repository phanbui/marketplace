<% layout('layouts/boilerplate') -%>

<form class="container mb-3" style="width: 30rem;" action="/listings/<%= listing._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="tilte" value="<%= listing.title %>" name="listing[title]" required>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
            <span class="input-group-text">$</span>
            </div>
            <input type="text" name="listing[price]" class="form-control" aria-label="Amount (to the nearest dollar)" value="<%= listing.price %>" required>
        </div>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" rows="3" name="listing[description]"><%= listing.description %></textarea>
    </div>
    <div class="form-group">
        <input type="file" id="images" name="images" accept="image/png, image/jpeg" multiple>
    </div>
    <div class="form-group">
        <% listing.images.forEach((image, i) => { %>
            <img src="<%= image.url %>" alt="..." class="img-thumbnail">
            <div class="form-check mb-1">
                <input class="form-check-input" type="checkbox" id="deleteCheckbox-<%= i %>" name="deleteFilenames[]" value="<%= image.filename %>">
                <label class="form-check-label" for="deleteCheckbox-<%= i %>">Delete Image</label>
            </div>
        <% }) %>
    </div>
    <button class="btn btn-success">Update Listing</button>
</form>