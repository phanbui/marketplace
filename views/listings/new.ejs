<% layout('layouts/boilerplate') -%>

<form class="container" style="width: 30rem;" action="/listings" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="tilte" placeholder="Title" name="listing[title]" required>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
            <span class="input-group-text">$</span>
            </div>
            <input type="text" name="listing[price]" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="0.00" required>
        </div>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" rows="3" name="listing[description]" placeholder="Description"></textarea>
    </div>
    <div class="form-group">
        <input type="file" id="images" name="images" accept="image/png, image/jpeg" multiple>
    </div>
    <button class="btn btn-success">Create Listing</button>
</form>